<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 text-white">
    <div class="w-full min-h-screen p-10">
      <a class="text-blue-500 mb-5 inline-block" href="/">Back to Home</a>
      <h1 class="text-3xl tracking-tighter mb-5">All Users</h1>

      <div class="users flex gap-5 flex-wrap">
        <% if (users.length > 0) { %> <% users.forEach(function(user) { %>
        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-72 rounded-lg overflow-hidden bg-zinc-700">
            <img
              class="w-full h-full object-cover"
              src="<%= user.image %>"
              alt="User Image"
            />
          </div>
          <h3 class="text-xl mt-3 tracking-tighter"><%= user.name %></h3>
          <h5 class="text-zinc-500"><%= user.email %></h5>
          <div class="flex gap-3 mt-6">
            <a class="text-zinc-500" href="/edit/<%= user._id %>">Edit user</a>
            <a class="text-red-300" href="/delete/<%= user._id %>">
              Delete user
            </a>
          </div>
        </div>
        <% }); %> <% } else { %>
        <p class="text-zinc-200">No users found.</p>
        <% } %>
      </div>
    </div>
  </body>
</html>
